<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{emp._id}}">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" name="id" placeholder="User ID" value="{{emp.id}}" pattern="(?=.*[aA-zZ]).{1,6}" title="Id cannot be more than 6 characters">
        <script> id = {{emp.id}}>6
            
        </script>
        <div class="text-danger">
            {{emp.idError}}</div>
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="username" placeholder="User Name" value="{{emp.username}}" pattern="(?=.*[a-z])(?=.*[A-Z]).{1,20}" title="Must contain at least one number and one uppercase and lowercase letter, and Username should not more than 20 characters" >
        <div class="text-danger">
            {{emp.usernameError}}</div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Please Enter Password" value="{{emp.password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
        <div class="text-danger">
            {{emp.passwordError}}</div>
    </div>
    <div class="form-row">
        
        <div class="form-group col-md-6">
            <label>Email ID</label>
            <input type="text" class="form-control" name="email" placeholder="Plzz Enter email id" value="{{emp.email}}" pattern="[Aa-Zz0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" >
        </div>

        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;

{{!-- DROP DOWN LIST  --}}

        <div>
            <label>Salary</label>
            <select class="form-control" name="salary" required 
            oninvalid="this.setCustomValidity('Before Submitting Please Select Salary Slab First')"
            oninput="this.setCustomValidity('')"/>
                {{#select emp.salary}}
                    <option value="" > Select Salary Slab  </option>
                    <option value="Below 2 Lacs" > Below 2 Lacs  </option>
                    <option value="2-4 Lacs"> 2-4 Lacs </option>
                    <option value="4-7 Lacs" > 4-7 Lacs </option>
                    <option value="Above 7 Lacs" > Above 7 Lacs </option>
                {{/select}}

            </select>
        </div>



