        <option value="4-7 Lacs" > 4-7 Lacs </option>
        <option value="Above 7 Lacs" > Above 7 Lacs </option>
        </select>

        </div>

<script>
        function getSelectValue()
        {
            var selectedValue = document.getElementById("salary").value;
            alert(selectedValue);
        }
        getSelectValue();
    </script>
